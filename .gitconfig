[user]
	email = heitor.danilo@icloud.com
	name = Heitor Danilo

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[commit]
	verbose = true

[branch]
	sort = -committerdate

[tag]
	sort = -version:refname

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictStyle = zdiff3
