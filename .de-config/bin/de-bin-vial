#!/usr/bin/env sh

APPIMAGES_DIR="$HOME/.de-config/applications/app-images"
VIAL_APPIMAGE=$(find "$APPIMAGES_DIR" -maxdepth 1 -name "Vial-v*.AppImage" -type f | sort -V | tail -n1)

if [ -n "$VIAL_APPIMAGE" ] && [ -f "$VIAL_APPIMAGE" ]; then
  exec "$VIAL_APPIMAGE"
else
  de-notification-send "Vial not found" "No Vial AppImage found in $APPIMAGES_DIR" -u -t 10000
  exit 1
fi
