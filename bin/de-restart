#!/usr/bin/env sh

de-restart-app-waybar
de-restart-app-swayosd
de-restart-app-background
de-restart-app-walker
pkill -USR1 kitty
pkill -USR1 nvim
# killall -SIGUSR1 gtk-update-icon-cache 2>/dev/null || true
makoctl reload
hyprctl reload

de-keyboard-layout-set $(de-keyboard-layout-get)

if [ "$1" = "notify" ]; then
    notify-send "DE restarted"
fi
